{
  "name": "Jira Button Creator",
  "description": "Creates a button in Jira issues to copy a Git-friendly branch name",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "48": "jira_branch_creator.png",
    "128": "jira_branch_creator.png"
  },
  "action": {
    "default_title": "Jira Button Creator",
    "default_popup": "pages/popup.html",
    "default_icon": "jira_branch_creator.png"
  },
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content/index.js"]
    }
  ],
  "permissions": ["storage"]
}
